              "../hanoi/ebin",
              "../hanoi/deps/plain_fsm/ebin",
              "../hanoi/deps/ebloom/ebin"
              ]}.

{bitcask_dir, "/tmp/hanoi.bench"}.

{bitcask_flags, [o_sync]}.
