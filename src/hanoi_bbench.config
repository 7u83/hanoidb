
{mode, max}.

{duration, 20}.

{concurrent, 1}.

{driver, basho_bench_driver_hanoi}.

{key_generator, {int_to_bin,{uniform_int, 5000000}}}.

{value_generator, {fixed_bin, 10000}}.

{operations, [{get, 1}, {put, 1}]}.

